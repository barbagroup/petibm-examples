prec:coarse_solver(c_solver)=DENSE_LU_SOLVER
prec:dense_lu_num_rows=128
prec:dense_lu_max_rows=0
prec:coarsest_sweeps=1
prec:smoother(smooth)=BLOCK_JACOBI

smooth:relaxation_factor=0.9

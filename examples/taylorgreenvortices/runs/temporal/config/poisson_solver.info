config_version=2

communicator=MPI
min_rows_latency_hiding=-1
matrix_consolidation_lower_threshold=0
matrix_consolidation_upper_threshold=1000
fine_level_consolidation=0
determinism_flag=1

solver(solv)=PCG
solv:max_iters=1000
solv:monitor_residual=1
solv:store_res_history=1
